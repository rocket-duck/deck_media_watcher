# Host paths (you may point to the Steam 'remote' root to cover all games)
HOST_SCREENSHOT_DIR=/path/to/Steam/userdata/<user>/760/remote

# Container paths
SCREENSHOT_DIR=/screenshots

# Telegram configuration
TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# Optional: Steam store language for game name lookup (en, ru, ...)
STEAM_LANG=en

# Optional: file readiness and dedup
FILE_READY_DELAY=1
FILE_READY_ATTEMPTS=5
FILE_READY_MIN_SIZE=1024
DEDUP_TTL_SECONDS=120

# Optional: Telegram send retries and caption limit
TELEGRAM_SEND_ATTEMPTS=3
TELEGRAM_SEND_BACKOFF_SECONDS=1
TELEGRAM_CAPTION_LIMIT=1024

# Optional: graceful shutdown drain time
SHUTDOWN_DRAIN_SECONDS=5
